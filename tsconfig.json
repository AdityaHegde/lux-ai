{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["esnext"],
    "target": "es2017",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,

    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@memory/*": ["src/memory/*"]
    }
  },
  "include": [
    "src/lux/**/*",
    "src/**/*",
    "scripts/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
